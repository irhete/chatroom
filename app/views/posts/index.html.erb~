<script type="text/javascript" language="javascript">
  $(function() {
  window.alert(window.location.pathname + "/new");
  var faye = new Faye.Client('http://localhost:9292/faye');
  
  faye.subscribe(window.location.pathname + "/new", function(data) {
    eval(data);
  });
});
</script>
<% end %>


