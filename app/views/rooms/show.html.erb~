  <p>
    <b><%= post.username %></b>
    <%= post.body %>
    <td><%= link_to 'Destroy', [post.room, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </p>
<% end %>

<%= form_for([@room, @room.posts.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_room_path(@room) %> |
